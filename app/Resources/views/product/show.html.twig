{% extends 'product/product_layout.html.twig' %}

{% block body %}
    <h1>Product</h1>
<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Nume</th>
                    <td>{{ product.nume }}</td>
                </tr>
                <tr>
                    <th>Manufacturer</th>
                    <td>{{ product.manufacturer }}</td>
                </tr>
                <tr>
                    <th>Images</th>
                    <td>{% for image in product.images %}
                        <img src="{{asset(image.getWebPath)}}" class="img-responsive thumbnail" width="150" height="150" alt="{{image.name}}"/>
                        {%endfor%}
                    
                    </td>
                </tr>
                <tr>
                    <th>Ean</th>
                    <td>{{ product.ean }}</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ product.reference }}</td>
                </tr>
                <tr>
                    <th>Saleprice</th>
                    <td>{{ product.salePrice }}</td>
                </tr>
                <tr>
                    <th>Datcre</th>
                    <td>{% if product.datCre %}{{ product.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Datupd</th>
                    <td>{% if product.datUpd %}{{ product.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{ form_start(delete_form) }}
        <div class="row top-buffer">
            <div class="col-md-4 col-sm-4">
                <input type="submit" class="btn btn-danger" value="Delete">
            </div>
        </div> 
    {{ form_end(delete_form) }}
    <div class="row top-buffer">
        <a href="{{ path('product_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Back to the list</a>
    </div>
</div>
{% endblock %}
