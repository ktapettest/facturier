{% extends 'partner/partner_layout.html.twig' %}

{% block body %}
    <h1>Address</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ address.id }}</td>
                </tr>
                <tr>
                    <th>Alias</th>
                    <td>{{ address.alias }}</td>
                </tr>
                <tr>
                    <th>Street</th>
                    <td>{{ address.street }}</td>
                </tr>
                <tr>
                    <th>No</th>
                    <td>{{ address.no }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ address.city }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ address.country }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ address.email }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ address.phone }}</td>
                </tr>
                <tr>
                    <th>Partner</th>
                    <td>
                        <a href="{% if address.partner.id is defined %} {{ path('partner_show', { 'id': address.partner.id }) }} {% endif %}">{{ address.partner }}</a>
                    </td>
                </tr>
                <tr>
                    <th>Datcre</th>
                    <td>{% if address.datCre %}{{ address.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Datupd</th>
                    <td>{% if address.datUpd %}{{ address.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>
                
    {{ form_start(delete_form) }}
        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            {{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-sm btn-danger'}}) }}
        </div>
    {{ form_end(delete_form) }}
</div>
    <a href="{{ path('address_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Back to the list</a>
   
{% endblock %}

