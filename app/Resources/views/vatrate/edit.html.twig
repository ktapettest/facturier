{% extends 'product/product_layout.html.twig' %}
{% block body %}
    <h1>VatRate edit</h1>
    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
    
   <div class="form-group">
        {{ form_label(edit_form.code, 'Code', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
       
        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.code, {'attr': {'class': 'form-control'}}) }}
        </div>
         {{ form_errors(edit_form.code) }}
    </div>  
    <div class="form-group">
        {{ form_label(edit_form.description, 'Description', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
       
        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
         {{ form_errors(edit_form.description) }}
    </div> 
    <div class="form-group">
        {{ form_label(edit_form.rate, 'Rate', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
       
        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.rate, {'attr': {'class': 'form-control'}}) }}
        </div>
         {{ form_errors(edit_form.rate) }}
    </div> 
    <div class="form-group">
        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            <input type="submit" class="btn btn-success" value="Edit" />
        </div>
    </div>
    {{ form_end(edit_form) }}
     <a href="{{ path('vatrate_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Back to the list</a>     
{% endblock %}

