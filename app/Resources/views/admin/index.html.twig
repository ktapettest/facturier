{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>
<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
        {% for user in entities %}
            <tr>
                <td><a href="{{ path('admin', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                {% for role in user.roles %}
                    {{ role }}
                 {% endfor %}  
                 </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}
